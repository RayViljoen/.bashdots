#!/bin/bash

alias bd="bashdots"

function bashdots() {

		# Update flag
		if [ "$1" == "--update" -o "$1" == "-u" ]; then	
			echo "Updating..."
			git pull
			echo "Done"

		# Show help flag
		elif [ "$1" == "--help" -o "$1" == "-h" ]; then
			echo "BashDots Help in progress"
		else
			cd "${BASHDOTS_DIR}"
		fi
	}